@page "/show"
@inject HttpClient Http

<h1>Show stories</h1>

<p>This component fetches top show stories from Hacker News.</p>

@if (posts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>title</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in posts)
            {
                <tr>
                    <td><a href="https://news.ycombinator.com/item?id=@post.id">@post.id</a></td>
                    <td><a href="@post.data.url">@post.data.title</a></td>
                    <td>@post.data.GetComments()</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    public class PostData {
        public string by { get; set; }
        public int descendants { get; set; }
        public int id { get; set; }
        public int[] kids { get; set; }
        public int score { get; set; }
        public int time { get; set; }
        public string title { get; set; }
        public string type { get; set; }
        public string url { get; set; }
        public int GetComments() {
            if (kids == null)
                return 0;
            return kids.Count();
        }
    }

    List<Post> posts = new List<Post>();

    protected override async Task OnInitializedAsync()
    {
        int[] ids = await Http.GetJsonAsync<int[]>("https://hacker-news.firebaseio.com/v0/showstories.json?print=pretty");
        for (var i = 0; i < 10; i++) {
        
            var data = await Http.GetJsonAsync<PostData>("https://hacker-news.firebaseio.com/v0/item/" + ids[i] + ".json?print=pretty");
            
            posts.Add(new Post(ids[i], data));
        }
    }
    
    

    public class Post
    {
        public int id { get; set; }
        public PostData data { get; set; }
        
        public Post(int id, PostData data) {
            this.id = id;
            this.data = data;
        }
    }
}
